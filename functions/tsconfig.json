{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "target": "es2021",
        "allowJs": false,
        "checkJs": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./"
    },
    "compileOnSave": true,
    "include": ["src"],
    "exclude": ["node_modules"],
    "typeRoots": ["../node_modules/@types"]
}
