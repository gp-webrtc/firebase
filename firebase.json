{
    "firestore": {
        "rules": "firestore/firestore.rules",
        "indexes": "firestore/firestore.indexes.json"
    },
    "functions": {
        "source": "functions",
        "codebase": "default",
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log",
            "dist/scripts"
        ],
        "predeploy": [
            "if [ -d \"$RESOURCE_DIR\"/dist ]; then rm -rf \"$RESOURCE_DIR\"/dist; fi",
            "npm --prefix \"$RESOURCE_DIR\" run lint",
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ]
    },
    "storage": {
        "rules": "./storage/storage.rules"
    },
    "emulators": {
        "hub": {
            "host": "127.0.0.1",
            "port": 4400
        },
        "ui": {
            "enabled": true,
            "host": "127.0.0.1"
        },
        "auth": {
            "host": "127.0.0.1"
        },
        "firestore": {
            "host": "127.0.0.1"
        },
        "functions": {
            "host": "127.0.0.1"
        },
        "storage": {
            "host": "127.0.0.1"
        },
        "eventarc": {
            "host": "127.0.0.1"
        },
        "logging": {
            "host": "127.0.0.1"
        },
        "singleProjectMode": true
    }
}